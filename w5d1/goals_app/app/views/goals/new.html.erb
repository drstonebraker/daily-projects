<h1>New Goal</h1>
<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <label for="">Title
    <input type="text" name="goal[title]" value="<%= @goal.title %>">
  </label>
  <label for="">Public
    <input type="checkbox" name="goal[title]" <%= 'checked' if @goal.public %>>
  </label>
  <input type="submit" value="Submit Goal">
  <%= render 'shared/errors' %>
</form>
